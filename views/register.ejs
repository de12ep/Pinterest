<% include ./partials/header.ejs %>
<div class =" w-full h-screen  bg-zinc-300 flex items-center justify-center">
<div class="w-[25vw] bg-white px-10 py-5 rounded-[20px]">
<h1 class="text-3xl text-center font-semibold text-zinc-700 tracking-tighter capitalize leading-none">Create New Account</h1>  
<form action="/register" method="post">
    <input class="border-2 rounded-md block mt-2 w-full px-3 py-2 " type="text" name="username" placeholder="username">
    <input class="border-2 rounded-md block mt-2 w-full px-3 py-2 " type="text" name="name" placeholder="name">
    <input class="border-2 rounded-md block mt-2 w-full px-3 py-2 " type="email" name="email" placeholder="email">
    <input class="border-2 rounded-md block mt-2 w-full px-3 py-2 " type="numeric" name="contact" placeholder="contact">
    <input class="border-2 rounded-md block mt-2 w-full px-3 py-2 "  type="password" name="password" placeholder="Password">
   
    <input class="border-2 rounded-md block mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full"  type="submit" name="submit" value="Create New Account">
    <p class="text-xs font-semibold text-zinc-700 mt-2 text-center ">By continuing, you agree to Pinterest's Terms of Service;and acknowledge that you've read our Privacy Policy</p>
    <a class="inline-block mt-2 text-sm text-zinc-700 text-center w-full" href="/">Login Existing Account</a>
</form>  
</div>  
</div>
<% include ./partials/footer.ejs %>
  
